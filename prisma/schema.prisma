generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
}

model Company {
  id           Int       @id @default(autoincrement())
  company_name String
  logo_url     String?
  city         String?
  district     String?
  state        String?
  contact_no   String?
  gstin_no     String?
  upi_id       String?
  bis_reg_no   String?
  pan_no       String?
  created_at   DateTime? @default(now())
  updated_at   DateTime? @updatedAt
}

model MasterEntry {
  id                Int       @id @default(autoincrement())
  gold_16c          Int?
  gold_18c          Int?
  gold_22c          Int?
  gold_24c          Int?
  silver_pure       Int?
  silver_ornamental Int?
  remarks           String?
  created_at        DateTime? @default(now())
  updated_at        DateTime? @updatedAt
}

model Customer {
  id         Int       @id @default(autoincrement())
  name       String
  address    String?
  city       String?
  district   String?
  state      String?
  pincode    String?
  contact_no String?
  gstin_no   String?
  upi_id     String?
  pan_no     String?
  created_at DateTime? @default(now())
  updated_at DateTime? @updatedAt
}

model SalesPOS {
  id                  Int      @id @default(autoincrement())
  contact_number      String
  customer_id         String
  customer_name       String
  gstin_no            String
  product_code        String
  product_name        String
  gold_price          Float
  live_rate           Boolean
  master_entry_rate   Float?
  manual_rate         Float?
  unit                String
  net_weight          Float
  making_charges      Float
  sales_total         Float
  discount_percent    Float
  total_rate          Float
  gst_type            String
  total_amount        Float
  barcode_number      String
  other_charges       Float
  reference           String
  pay_mode            String
  cash_adjustment     Float
  created_at          DateTime @default(now())
}